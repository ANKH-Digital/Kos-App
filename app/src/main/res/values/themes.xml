<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Kosku" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomShapeCut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="CustomShapeRound" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="CustomShapeTIL">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="RoundedTopLeftRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
    </style>

    <style name="CustomTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearance">@style/CustomShapeTIL</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/CustomShapeRound</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Body</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="CustomCheckBox">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeRound</item>
    </style>


    <style name="BasicIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeRound</item>
    </style>

    <style name="LinearLayoutRole">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/shadow_cardview</item>
    </style>

</resources>